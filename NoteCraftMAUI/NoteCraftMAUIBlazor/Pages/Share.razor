@inherits ShareBase

@if (ShowSharing)
{
    <div class="modal fade show d-block" id="exampleModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">@SharingTitle</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"
                        @onclick="() => Hide()">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <label for="shareInput" class="form-label">Username to share this note with</label>
                    <input type="text" class="form-control" id="shareInput" @bind-value="Username">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal"
                        @onclick="() => Hide()">
                        Cancel
                    </button>
                    <button type="button" class="btn btn-primary"
                        @onclick="() => OnSharingChange(Username)">
                        Share
                    </button>
                </div>
            </div>
        </div>
    </div>
}
