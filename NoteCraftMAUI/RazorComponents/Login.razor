<EditForm Model="@UserAuth" OnValidSubmit="LoginUser">
    <div class="form-group-row">
        <label for="username" class="col-sm-2 col-form-label">
            Username
        </label>
        <div class="col-sm-8">
            <InputText id="username" class="form-control" placeholder="Username" @bind-Value="UserAuth.Username"></InputText>
            <ValidationMessage For="@(() => UserAuth.Username)" />
        </div>
    </div>
    <div class="form-group-row">
        <label for="password" class="col-sm-2 col-form-label">
            Password
        </label>
        <div class="col-sm-8">
            <InputText id="password" class="form-control" placeholder="Password" @bind-Value="UserAuth.Password"></InputText>
            <ValidationMessage For="@(() => UserAuth.Password)" />
        </div>
    </div>
</EditForm>



